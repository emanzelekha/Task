<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape
            android:shape="rectangle" >
            <gradient
                android:startColor="@color/MainColor"
                android:centerColor="@color/MainColor"
                android:endColor="@color/MainColor"
                />


       <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"></corners>

        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="rectangle" >
            <gradient
                android:startColor="@color/MainColor"
                android:centerColor="@color/MainColor"
                android:endColor="@color/MainColor"
                />

            <stroke
                android:width="2dp"
                android:color="#F6F6F6" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"></corners>



        </shape>
    </item>


</selector>