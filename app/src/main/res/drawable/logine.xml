<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle" >

            <gradient

                android:startColor="@color/MainColor"
                android:centerColor="@color/MainColor"
                android:endColor="@color/MainColor"
                />
            <corners android:bottomRightRadius="10dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle" >
            <gradient
                android:startColor="@color/second"
                android:centerColor="@color/second"
                android:endColor="@color/second"
                />
            <corners android:bottomRightRadius="10dp"></corners>

        </shape>
    </item>
</selector>